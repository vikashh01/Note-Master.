package hostingerwebsite;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

import java.time.Duration;

public class BaseTest {
   WebDriver driver;

    @BeforeClass
    public void setup() {
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
        driver.get("https://www.hostinger.com/");
    }
    
    @Test(priority = 1)
    public void verifyHomePageElements() {
        boolean logoDisplayed = driver.findElement(By.className("hostinger-logo")).isDisplayed();
        Assert.assertTrue(logoDisplayed, "Logo is not displayed!");

        driver.findElement(By.linkText("Pricing")).click();
        Assert.assertTrue(driver.getTitle().contains("Pricing"), "Pricing page not opened!");
        
        driver.navigate().back(); 
    }
    
    @Test(priority = 2)
    public void testValidSignup() {
        driver.get("https://auth.hostinger.com/register?_ga=2.100840645.517188772.1743237078-1085366583.1743237078&_gl=1%2A1ekfyn7%2A_gcl_au%2ANDMwOTAxMjQuMTc0MzIzNzA5NA..%2A_ga%2AMTA4NTM2NjU4My4xNzQzMjM3MDc4%2A_ga_73N1QWLEMH%2AMTc0MzIzOTQxNS4yLjEuMTc0MzI0MzI1Ni40OC4wLjE5NTQ5NzEyNDc.");
        driver.findElement(By.id("email")).sendKeys("vikashkumarbharti@gmail.com");
        driver.findElement(By.id("password")).sendKeys("vikash@1234");
        driver.findElement(By.id("confirm-password")).sendKeys("vikash@1234");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        // Verify success message
        String successMsg = driver.findElement(By.xpath("//div[@class='success-message']")).getText();
        Assert.assertEquals(successMsg, "Signup successful!", "Success message mismatch");
    }

    @Test(priority = 3)
    public void testInvalidSignup() {
    	driver.get("https://auth.hostinger.com/register?_ga=2.100840645.517188772.1743237078-1085366583.1743237078&_gl=1%2A1ekfyn7%2A_gcl_au%2ANDMwOTAxMjQuMTc0MzIzNzA5NA..%2A_ga%2AMTA4NTM2NjU4My4xNzQzMjM3MDc4%2A_ga_73N1QWLEMH%2AMTc0MzIzOTQxNS4yLjEuMTc0MzI0MzI1Ni40OC4wLjE5NTQ5NzEyNDc.");
        driver.findElement(By.id("email")).sendKeys("invalidemail");
        driver.findElement(By.id("password")).sendKeys("123");
        driver.findElement(By.id("confirm-password")).sendKeys("456");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        // Verify error message
        String errorMsg = driver.findElement(By.xpath("//div[@class='error-message']")).getText();
        Assert.assertTrue(errorMsg.contains("Invalid email or password"), "Expected an error message for invalid signup");
    }
    
    @Test(priority = 4)
    public void testValidLogin() {
        driver.findElement(By.id("hgr-topmenu-login")).click();
        driver.findElement(By.id("email-input")).sendKeys("testuser@example.com");
        driver.findElement(By.id("password-input")).sendKeys("Test@1234");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        // Verify successful login
        Assert.assertTrue(driver.getTitle().contains("Dashboard"), "Login failed!");
    }

    @Test(priority = 5)
    public void testInvalidLogin() {
        driver.findElement(By.id("hgr-topmenu-login")).click();
        driver.findElement(By.id("email-input")).sendKeys("wrong@example.com");
        driver.findElement(By.id("password-input")).sendKeys("wrongpass");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        // Verify error message
        String errorMsg = driver.findElement(By.xpath("//div[@class='error-message']")).getText();
        Assert.assertTrue(errorMsg.contains("Invalid login credentials"), "Expected error message not displayed!");
    }
    @Test(priority = 6)
    public void verifyHostingPlans() {
        driver.findElement(By.linkText("Web Hosting")).click();
        Assert.assertTrue(driver.getTitle().contains("Web Hosting"), "Hosting plans page not opened!");
    }
    
    
    
    
    

    @AfterClass
    public void teardown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
