    @Test(priority = 4)
    public void testValidLogin() {
        driver.findElement(By.linkText("Log in")).click();
        driver.findElement(By.id("email-input")).sendKeys("testuser@example.com");
        driver.findElement(By.id("password-input")).sendKeys("Test@1234");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        // Verify successful login
        Assert.assertTrue(driver.getTitle().contains("Dashboard"), "Login failed!");
    }

    @Test(priority = 5)
    public void testInvalidLogin() {
        driver.findElement(By.linkText("Log in")).click();
        driver.findElement(By.id("email")).sendKeys("wrong@example.com");
        driver.findElement(By.id("password")).sendKeys("wrongpass");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        // Verify error message
        String errorMsg = driver.findElement(By.xpath("//div[@class='error-message']")).getText();
        Assert.assertTrue(errorMsg.contains("Invalid login credentials"), "Expected error message not displayed!");
    }
    @Test(priority = 6)
    public void verifyHostingPlans() {
        driver.findElement(By.linkText("Web Hosting")).click();
        Assert.assertTrue(driver.getTitle().contains("Web Hosting"), "Hosting plans page not opened!");
    }
    
    
    
    
    

    @AfterClass
    public void teardown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
