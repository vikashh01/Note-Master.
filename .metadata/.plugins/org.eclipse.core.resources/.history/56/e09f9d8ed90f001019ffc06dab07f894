package FullProject;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.annotations.AfterClass;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;
import java.time.Duration;

public class SignupTest {
    WebDriver driver;
    WebDriverWait wait;

    @BeforeMethod(alwaysRun = true)
    public void setup() {
        driver = new ChromeDriver();
        wait = new WebDriverWait(driver, Duration.ofSeconds(10));
        driver.manage().window().maximize();
        driver.get("https://notes-makers.vercel.app/");
    }

    @Test(priority = 1)
    public void testSignup() {
        WebElement signupBtn = wait.until(ExpectedConditions.elementToBeClickable(By.cssSelector("button:nth-child(2) strong")));
        signupBtn.click();

        wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("name"))).sendKeys("vikashkr");
        driver.findElement(By.id("email")).sendKeys("vikashkr123@gmail.com");
        driver.findElement(By.id("password")).sendKeys("vikash@123");
        driver.findElement(By.id("confirmPassword")).sendKeys("vikash@123");

        WebElement finalSignupBtn = wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button/strong[contains(text(),'Sign Up')]")));
        finalSignupBtn.click();

    }

    @Test(priority = 2)
    public void testLogin() throws InterruptedException {
        driver.findElement(By.xpath("//input[@id='email']")).sendKeys("vikashkr123@gmail.com");
        driver.findElement(By.xpath("//input[@id='password']")).sendKeys("vikash@123");
        driver.findElement(By.xpath("//body//div//div//main//div//div//div//div//div//button")).click();

    }

    @Test(priority = 3)
    public void testCreateNote() throws InterruptedException {
    	driver.get("https://notes-makers.vercel.app/pages/notes");
        driver.findElement(By.xpath("//strong[normalize-space()='Write Notes']")).click();
        driver.findElement(By.xpath("//input[contains(@placeholder,'Notes Title')]")).sendKeys("First Note");
        driver.findElement(By.xpath("//div[@class='ql-editor']")).sendKeys("This is my first note.");
        driver.findElement(By.xpath("//strong[normalize-space()='Save Changes']")).click();

        Thread.sleep(3000);
    }
