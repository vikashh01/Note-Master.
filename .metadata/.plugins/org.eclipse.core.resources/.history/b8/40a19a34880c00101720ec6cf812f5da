package hostingerwebsite;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

import java.time.Duration;
import java.util.List;

public class BaseTest {
    WebDriver driver;
    WebDriverWait wait;

    @BeforeClass
    public void setup() {
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        wait = new WebDriverWait(driver, Duration.ofSeconds(10));
        driver.get("https://www.hostinger.com/");
    }

    @Test(priority = 1)
    public void verifyHomePageElements() {
        WebElement logo = wait.until(ExpectedConditions.visibilityOfElementLocated(By.className("hostinger-logo")));
        Assert.assertTrue(logo.isDisplayed(), "Logo is not displayed!");

        WebElement pricingLink = wait.until(ExpectedConditions.elementToBeClickable(By.linkText("Pricing")));
        pricingLink.click();
        Assert.assertTrue(driver.getTitle().contains("Pricing"), "Pricing page not opened!");
        
        driver.navigate().back();
    }

    @Test(priority = 2)
    public void testValidSignup() {
        driver.get("https://auth.hostinger.com/register?_ga=2.100840645.517188772.1743237078-1085366583.1743237078&_gl=1%2A1ekfyn7%2A_gcl_au%2ANDMwOTAxMjQuMTc0MzIzNzA5NA..%2A_ga%2AMTA4NTM2NjU4My4xNzQzMjM3MDc4%2A_ga_73N1QWLEMH%2AMTc0MzIzOTQxNS4yLjEuMTc0MzI0MzI1Ni40OC4wLjE5NTQ5NzEyNDc.");
        driver.findElement(By.id("email-input")).sendKeys("vikashkumarbharti@gmail.com");
        driver.findElement(By.id("password-input")).sendKeys("vikash@1234");
        driver.findElement(By.xpath("//button[normalize-space()='Register']")).click();

    }

    @Test(priority = 3)
    public void testInvalidSignup() {
        driver.get("https://auth.hostinger.com/register?_ga=2.100840645.517188772.1743237078-1085366583.1743237078&_gl=1%2A1ekfyn7%2A_gcl_au%2ANDMwOTAxMjQuMTc0MzIzNzA5NA..%2A_ga%2AMTA4NTM2NjU4My4xNzQzMjM3MDc4%2A_ga_73N1QWLEMH%2AMTc0MzIzOTQxNS4yLjEuMTc0MzI0MzI1Ni40OC4wLjE5NTQ5NzEyNDc.");
        driver.findElement(By.id("email-input")).sendKeys("invalidemail");
        driver.findElement(By.id("password-input")).sendKeys("123");
        driver.findElement(By.xpath("//button[normalize-space()='Register']")).click();

        
    }

    @Test(priority = 4)
    public void testValidLogin() {
        driver.get("https://auth.hostinger.com/login");
        driver.findElement(By.id("email")).sendKeys("testuser@example.com");
        driver.findElement(By.id("password")).sendKeys("Test@1234");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

      
    }

    @Test(priority = 5)
    public void testInvalidLogin() {
        driver.get("https://auth.hostinger.com/login");
        driver.findElement(By.id("email")).sendKeys("wrong@example.com");
        driver.findElement(By.id("password")).sendKeys("wrongpass");
        driver.findElement(By.xpath("//button[@type='submit']")).click();

        
    }

    @Test(priority = 6)
    public void verifyHostingPlans() {
        WebElement hostingLink = wait.until(ExpectedConditions.elementToBeClickable(By.linkText("Web Hosting")));
        hostingLink.click();
        Assert.assertTrue(driver.getTitle().contains("Web Hosting"), "Hosting plans page not opened!");
    }

    @Test(priority = 7)
    public void verifyAvailableHostingPlans() {
        driver.get("https://www.hostinger.com/web-hosting");
        List<WebElement> plans = driver.findElements(By.xpath("//div[contains(@class, 'plan-card')]"));

        Assert.assertFalse(plans.isEmpty(), "No hosting plans found!");
    }

    @AfterClass
    public void teardown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
