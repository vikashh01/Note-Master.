package FullProject;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;
import java.time.Duration;

public class SignupTest {
    WebDriver driver;
    WebDriverWait wait;

    @BeforeClass
    public void setup() {
        driver = new ChromeDriver();
        wait = new WebDriverWait(driver, Duration.ofSeconds(10));
        driver.manage().window().maximize();
        driver.get("https://notes-makers.vercel.app/");
    }

    @Test(priority = 1)
    public void testSignup() {
        wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button[contains(text(),'Sign Up')]"))).click();
        wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("name"))).sendKeys("vikashUser");
        driver.findElement(By.id("email")).sendKeys("vikashUser@gmail.com");
        driver.findElement(By.id("password")).sendKeys("Vikash@123");
        driver.findElement(By.id("confirmPassword")).sendKeys("Vikash@123");
        driver.findElement(By.xpath("//button[contains(text(),'Sign Up')]")) .click();
    }

    @Test(priority = 2)
    public void testLogin() {
        wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button[contains(text(),'Login')]"))).click();
        driver.findElement(By.id("email")).sendKeys("vikashUser@gmail.com");
        driver.findElement(By.id("password")).sendKeys("Vikash@123");
        driver.findElement(By.xpath("//button[contains(text(),'Login')]")) .click();
    }

    @Test(priority = 3)
    public void testCreateNote() {
        wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//strong[contains(text(),'Write Notes')]"))).click();
        driver.findElement(By.xpath("//input[contains(@placeholder,'Notes Title')]")).sendKeys("Test Note");
        driver.findElement(By.xpath("//div[@class='ql-editor']")).sendKeys("This is a test note");
        driver.findElement(By.xpath("//strong[contains(text(),'Save Changes')]")).click();
    }

    @Test(priority = 4)
    public void testEditNote() {
        wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button[contains(text(),'Edit')]"))).click();
        WebElement noteContent = driver.findElement(By.xpath("//div[@class='ql-editor']"));
        noteContent.clear();
        noteContent.sendKeys("This is an edited note");
        driver.findElement(By.xpath("//strong[contains(text(),'Save Changes')]")).click();
    }

    @Test(priority = 5)
    public void testDeleteNote() {
        wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button[contains(text(),'Delete')]"))).click();
        driver.switchTo().alert().accept();
    }

    @Test(priority = 6)
    public void testLogout() {
        wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button[contains(text(),'Logout')]"))).click();
    }

    @AfterClass
    public void tearDown() {
        driver.quit();
    }
}
